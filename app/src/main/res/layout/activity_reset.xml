<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myback"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nitish.mistuorg.settings.Reset">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        card_view:cardBackgroundColor="@color/googleBackground"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/reset_editText1"
                android:background="@drawable/edit_text_login_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:id="@+id/reset_editText2"
                android:background="@drawable/edit_text_login_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:fontFamily="sans-serif-medium"
                />

            <Button
                android:id="@+id/reset_done"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_sigup_login"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/light_font"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:onClick="onClickDone"
                />



        </LinearLayout>







    </android.support.v7.widget.CardView>

</RelativeLayout>
