<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.nitish.mistuorg.home.ShareExp">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/helpExpInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shareExperienceInfo"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/shiny"
        android:background="@color/myColor"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/share_exp_card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        android:layout_below="@+id/helpExpInfo"
        app:cardPreventCornerOverlap="false"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="5dp">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/share_exp_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shareExperienceEditText"
                    android:maxLength="600"
                    android:minHeight="150dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="8dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:inputType="textCapSentences|textMultiLine"
                    android:background="@drawable/edit_text_login_signup"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/share_exp_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="0dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_b"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/myColor"
        >

        <TextView
            android:id="@+id/helpExpSubmit"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="@string/share"
            android:padding="5dp"
            android:textSize="22sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/button_sigup_login"
            />


    </RelativeLayout>

</RelativeLayout>
