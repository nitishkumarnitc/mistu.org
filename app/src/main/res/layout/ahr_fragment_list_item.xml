<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ahr_card_view1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    card_view:cardBackgroundColor="@color/googleBackground"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="4dp"
    app:contentPadding="0dp">

    <RelativeLayout
        android:id="@+id/ahr_frag_list_rel_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linear_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/hr_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/helpie_pic"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_communities" />

            <TextView
                android:id="@+id/hr_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:text="@string/hello_world"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#303f9f"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_toEndOf="@+id/linear_lay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hr_title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="75dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:maxLength="120"
                android:paddingStart="5dp"
                android:paddingEnd="2dp"
                android:paddingTop="5dp"
                android:text="@string/help_request"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ahr_view_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chevron_right_black_36dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>