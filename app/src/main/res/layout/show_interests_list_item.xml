<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/googleBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/show_interest_item_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/show_interest_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_interests"
        android:layout_toEndOf="@+id/show_interest_item_pic"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/googleFontColor"
        />

    <CheckBox
        android:id="@+id/show_interest_item_checkbox"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/check_box_green"
        />

</RelativeLayout>