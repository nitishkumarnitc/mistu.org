<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor"
    android:layout_below="@+id/new_home_nitc_iamge"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nitish.mistuorg.home.Home">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/myColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/new_home_nitc_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/nitc"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    />

                <ImageView
                    android:id="@+id/new_home_icon5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_white_48dp"
                    android:layout_marginTop="0dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentEnd="true"
                    />


                <android.support.v7.widget.CardView
                    android:id="@+id/new_home_card_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="false"
                    android:layout_marginTop="115dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="0dp"
                    app:contentPadding="0dp">

                    <ImageView
                        android:id="@+id/new_home_nitc_logo"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/nitc_logo1"
                        android:scaleType="centerCrop"
                        android:padding="3dp"
                        />

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/myColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    android:layout_margin="5dp"
                    card_view:cardBackgroundColor="@color/myGreen"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/home_ask_text"
                            android:textColor="@color/googleBackground"
                            android:textSize="16sp"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:id="@+id/new_home_icon4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/ask_help_logo"
                            android:padding="0dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    card_view:cardBackgroundColor="@color/myGreen"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="5dp"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/home_ahr_text"
                            android:textColor="@color/googleBackground"
                            android:textSize="16sp"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:id="@+id/new_home_icon2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/community_icon2"
                            android:padding="2dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    android:layout_margin="5dp"
                    card_view:cardBackgroundColor="@color/myGreen"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/home_noti_text"
                            android:textColor="@color/googleBackground"
                            android:textSize="16sp"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:id="@+id/new_home_icon1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/noti_icon_new"
                            android:padding="2dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    android:layout_margin="5dp"
                    card_view:cardBackgroundColor="@color/myGreen"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/home_search_text"
                            android:textColor="@color/googleBackground"
                            android:textSize="16sp"
                            android:padding="5dp"

                            />

                        <ImageView
                            android:id="@+id/new_home_icon8"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/search_mine"
                            android:padding="1dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>



<ListView
    android:id="@+id/new_home_slider"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="end|fill_vertical"
    android:choiceMode="singleChoice"
    />


</android.support.v4.widget.DrawerLayout>