<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/noti_req_card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="@color/googleBackground"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/noti_req_list_rl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/noti_req_list_item_img"
                    android:layout_alignParentTop="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/upload_pic"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/noti_req_list_rl_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/noti_req_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/req_info"
                        android:layout_marginStart="5dp"
                        android:paddingTop="3dp"
                        android:paddingStart="2dp"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="@color/googleFontColor"
                        />

                    <TextView
                        android:id="@+id/noti_req_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/noti_title"
                        android:layout_marginStart="5dp"
                        android:gravity="start"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:maxLength="120"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="5dp"
                        />


                </LinearLayout>


                <ImageView
                    android:id="@+id/noti_req_view_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_chevron_right_black_36dp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>